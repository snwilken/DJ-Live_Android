<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:state_focused="false"
        android:state_pressed="false">
        <shape>
            <stroke
                android:width="4dp"
                android:color="@color/colorDarkPrimary"/>
            <corners
                android:radius="8dp"/>

            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="12dp"
                android:bottom="12dp"/>

            <solid android:color="@color/colorLightPrimary"/>

        </shape>
    </item>


    <item
        android:state_focused="false"
        android:state_pressed="true">
        <shape>
            <stroke
                android:width="4dp"
                android:color="@color/colorLightPrimary"/>
            <corners
                android:radius="8dp"/>

            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="12dp"
                android:bottom="12dp"/>


            <text android:color="@color/colorLightPrimary"/>

            <solid android:color="@color/colorDarkPrimary"/>

        </shape>
    </item>

</selector>
