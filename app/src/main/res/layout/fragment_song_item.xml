<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_song"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="62dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="24dp"
        card_view:cardBackgroundColor="@color/colorCardViewBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_song_name"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginLeft= "5dp"
                android:maxLines="1"
                android:layout_marginTop="5dp" />


            <TextView
                android:id="@+id/tv_song_artist"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/tv_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tv_added_by"
                android:layout_marginLeft= "5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_added_by"
                android:textColor="#FFFFFF"
                android:layout_marginLeft= "5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_alignTop="@+id/tv_song_artist"
                android:layout_below="@+id/tv_song_name"
                android:layout_alignParentEnd="true">
            </TextView>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>