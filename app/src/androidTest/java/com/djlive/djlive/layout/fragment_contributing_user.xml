<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp">

    <!-- basic cardview for each user list item-->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_contributing_user"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@color/colorCardViewBackground"
        android:layout_margin="5dp"
        android:layout_height="62dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp">

            <!-- generic image for each user-->
            <ImageView
                android:id="@+id/iv_contributing_user"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/common_google_signin_btn_icon_light">
            </ImageView>

            <!-- stores the user name-->
            <TextView
                android:id="@+id/tv_userName"
                android:layout_toRightOf ="@+id/iv_contributing_user"
                android:layout_marginTop = "5dp"
                android:layout_marginLeft= "5dp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true">
            </TextView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>